{
  "name": "predikete-api",
  "version": "1.0.0",
  "private": true,
  "description": "** predikete-api",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/database/migrations.data.source.ts",
    "m:create": "npm run typeorm migration:create",
    "m:gen": "npm run typeorm migration:generate",
    "m:run": "npm run typeorm migration:run",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edkiri/predikete-api.git"
  },
  "author": "Eduardo Kiriakos <eduardokiriakos@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Edkiri/predikete-api/issues"
  },
  "homepage": "https://github.com/Edkiri/predikete-api#readme",
  "dependencies": {
    "@nestjs/common": "^9.0.11",
    "@nestjs/core": "^9.0.5",
    "@nestjs/platform-express": "^9.0.5",
    "@nestjs/config": "^2.2.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/typeorm": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cross-var": "^1.1.0",
    "dotenv": "^16.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "luxon": "^3.0.1",
    "nest-transact": "^9.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "rxjs": "^7.5.6",
    "swagger-ui-express": "^4.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typeorm": "^0.3.7",
    "typescript": "^4.7.4",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^3.11.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.5",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/luxon": "^3.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.6.1",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "16.x"
  }
}
